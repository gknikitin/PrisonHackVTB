        <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/tagline" android:layout_below="@+id/app_name" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_40dp" android:layout_below="@+id/lyt_container" android:layout_centerHorizontal="true"/>
</RelativeLayout>
